<h1>All Users</h1>
<% will_paginate %>
<ul class="users">
	<% @users.each do |user| %>
	<li>
	<%= link_to user.name, user %>
	<%= image_tag user.profile_image.url(:small) %>	
	<% if current_user.admin? %>
		<%= link_to "delete", user, :method => :delete, :confirm => "Are you sure?", :title => "Delete #{user.name}" %>
	<% end %>
	</li>
	<% end %>
</ul>
<% will_paginate %>
